.service-list
  .service-item.selected
    background-color $green_background
    color white
  .service-item
    display flex
    justify-content space-between
    position relative
    margin 10px 0
    background-color $light_silver_background
    padding 10px
    div
      display inline-block
    .service-title
      font-size 16px
    .service-icon
      font-size 16px
    &:hover
      cursor pointer
      opacity 0.8
    @media (min-width 768px)
      padding 15px
      margin 15px 0